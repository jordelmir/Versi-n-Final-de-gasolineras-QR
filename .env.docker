# Docker Environment Configuration for Gasolinera JSM Platform

# Database Configuration
POSTGRES_DB=gasolinera_db
POSTGRES_USER=gasolinera_user
POSTGRES_PASSWORD=gasolinera_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=gasolinera_redis_password

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=gasolinera_user
RABBITMQ_PASSWORD=gasolinera_password
RABBITMQ_VIRTUAL_HOST=gasolinera_vhost

# JWT Configuration
JWT_SECRET=gasolinera_jwt_secret_key_for_development_only
JWT_EXPIRATION=86400000

# SMS Service Configuration
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://api.sms-provider.com/v1/send

# QR Code Configuration
QR_SIGNING_KEY=gasolinera_qr_signing_key_for_development

# Monitoring Configuration
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=gasolinera_grafana_password

# Jaeger Configuration
JAEGER_HOST=jaeger
JAEGER_PORT=14268
JAEGER_AGENT_PORT=6831

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_TRACING_SAMPLING_PROBABILITY=1.0

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_GASOLINERAJSM=DEBUG
LOGGING_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# Resource Limits
JVM_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:+UseG1GC -XX:+UseStringDeduplication

# Network Configuration
DOCKER_NETWORK=gasolinera-network
DOCKER_SUBNET=172.20.0.0/16